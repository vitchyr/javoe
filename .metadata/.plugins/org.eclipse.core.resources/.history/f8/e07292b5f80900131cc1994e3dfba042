	}

	@Override
	public void onClick(View arg0) {
		switch(arg0.getId()){
			case R.id.restaurant1:
				break;
			case R.id.restaurant2:
				break;
			case R.id.restaurant3:
				break;
			case R.id.restaurant4:
				break;
			case R.id.restaurant5:
				break;
			case R.id.restaurant6:
				break;
			case R.id.restaurant7:
				break;
			case R.id.restaurant8:
				break;
			case R.id.restaurant9:
				break;
			case R.id.restaurant10:
				break;
			default:
				break;
		}
		startActivity(new Intent("android.intent.action.Restaurant"));
	}

}
